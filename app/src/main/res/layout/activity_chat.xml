<?xml version="1.0" encoding="utf-8"?>
<layout>
  <LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/a_chat_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_step_1"
        android:layout_marginLeft="@dimen/view_step_1"
        android:layout_marginRight="@dimen/view_step_1"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:clipChildren="false"
          android:clipToPadding="false"
          android:orientation="horizontal"
          android:paddingBottom="@dimen/view_step_1"
          android:paddingLeft="@dimen/view_step_1"
          android:paddingRight="@dimen/view_step_1"
          android:paddingTop="@dimen/view_step_1"
          >
        <EditText
            android:id="@+id/a_chat_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/view_step_2"
            android:layout_weight="1"
            android:background="@null"
            />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/a_chat_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:cropToPadding="false"
            android:src="@drawable/ic_send_white_24dp"
            app:backgroundTint="@color/md_blue_500"
            app:elevation="6dp"
            app:fabSize="mini"
            app:pressedTranslationZ="6dp"
            />
      </LinearLayout>
    </android.support.v7.widget.CardView>


  </LinearLayout>
</layout>