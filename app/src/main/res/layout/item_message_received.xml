<?xml version="1.0" encoding="utf-8"?>
<layout>
  <data>
    <variable
        name="viewModel"
        type="com.ground0.firebasechatdemo.core.viewModel.ChatMessageViewModelFactory.ChatMessageItemViewModel"
        />
  </data>
  <android.support.percent.PercentFrameLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingBottom="@dimen/view_step_1"
      android:paddingLeft="@dimen/view_step_2"
      android:paddingRight="@dimen/view_step_16"
      android:paddingTop="@dimen/view_step_1"
      >
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        app:cardBackgroundColor="@color/md_blue_500"
        app:cardElevation="@dimen/cardview_default_elevation"
        >
      <TextView
          android:id="@+id/i_message_text_view"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/view_step_1"
          android:minEms="1"
          android:minLines="1"
          android:text='@{viewModel.message}'
          android:textColor="@color/textColorInverse"
          />
    </android.support.v7.widget.CardView>
  </android.support.percent.PercentFrameLayout>
</layout>